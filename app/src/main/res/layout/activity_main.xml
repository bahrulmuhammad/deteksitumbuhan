<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ffe0f567">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/frameLogo">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/logo_deteksi_tanaman_hias"
            />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/frameLogo"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/tombolDeteksi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="DETEKSI"
            android:textSize="8pt"
            android:onClick="deteksi"
            android:backgroundTint="#6b7587"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/tombolKoleksi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="KOLEKSI"
            android:textSize="8pt"
            android:backgroundTint="#6b7587"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/tombolKeluar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="EXIT"
            android:textSize="8pt"
            android:onClick="onKeluar"
            android:backgroundTint="#6b7587"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>
