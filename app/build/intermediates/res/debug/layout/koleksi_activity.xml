<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <EditText android:width="120pt" android:singleLine="true"/>
                <Button
                    android:id="@+id/tombolCAri"
                    android:text="CARI" />
            </TableRow>
            </TableLayout>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tumbuhan" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">
            <Button
                android:id="@+id/tombolTambah"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TAMBAH"/>
            </LinearLayout>

        </LinearLayout>

</RelativeLayout><!-- From: file:/D:/android-projects/DeteksiTumbuhan/app/src/main/res/layout/koleksi_activity.xml -->